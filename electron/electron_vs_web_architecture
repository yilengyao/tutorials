digraph {
	rankdir=LR
	subgraph cluster_0 {
		node [fillcolor=white shape=box style=filled]
		label="Traditional web applications" style=rounded
		subgraph cluster_1 {
			label="Your server"
			server_code [label="Server code

Writes to the filesystem or database.
Coordinates between clients.
Communicates with the operating system."]
		}
		subgraph cluster_2 {
			label="Client's computer"
			client_code [label="Client code

Renders the UI.
Responds to user events."]
		}
		server_code -> client_code [dir=both]
	}
	subgraph cluster_3 {
		node [fillcolor=white shape=box style=filled]
		label="Electron applications" style=rounded
		subgraph cluster_4 {
			label=""
			server_code_e [label="Server code

Optional. Electron applications could
work with an external server to coordinate
between multiple clients." style="dashed,filled"]
		}
		subgraph cluster_5 {
			label="Client's computer"
			main_process [label="Main process

Writes to the filesystem or database.
Coordinates between clients.
Communicates with the operating system."]
			renderer_process [label="Renderer process

Renders the UI.
Responds to user events."]
			main_process -> renderer_process [dir=both]
		}
		server_code_e -> main_process [dir=both style=dashed]
	}
}
